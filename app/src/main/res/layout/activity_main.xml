<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buMod"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:onClick="buClearEvent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvShowNumber"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:gravity="right"
        android:paddingTop="20pt"
        android:paddingRight="4pt"
        android:paddingBottom="6pt"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="64sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/buAC"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="nt"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buPlus"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buPercent"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:backgroundTint="@color/btnBackGround"
                android:onClick="buOpEvent"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="buOpEvent"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu7"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buMulti"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="buOpEvent"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu4"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buMin"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="buOpEvent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu1"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/btnBackGround"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buSum"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="buOpEvent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="60pt"
            android:layout_height="60pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/btnBackGround"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="40pt"
            android:layout_height="60pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/btnBackGround"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/buEqual"
            android:layout_width="40pt"
            android:layout_height="60pt"
            android:layout_weight="1"
            android:background="@color/orange"
            android:onClick="buEqualEvent"
            android:text="="
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>